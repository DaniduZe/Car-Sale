<UserControl
    x:Class="Car_Sale.Livechart"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Car_Sale"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
    d:DesignHeight="600"
    d:DesignWidth="1080"
    Loaded="UserControl_Loaded"
    mc:Ignorable="d">

    <Grid Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="60"/>
            <ColumnDefinition />
            <ColumnDefinition />

            <ColumnDefinition Width="15" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="80"/>

            <RowDefinition/>
            <RowDefinition Height="15"/>

        </Grid.RowDefinitions>


        <StackPanel Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="2"  Width="800">
            <lvc:PieChart LegendLocation="Right" x:Name="Veh_pie" StartingRotationAngle="0" Height="500" Width="560"  Margin="20,-30,50,0"></lvc:PieChart>
          
        </StackPanel>

    </Grid>
</UserControl>
